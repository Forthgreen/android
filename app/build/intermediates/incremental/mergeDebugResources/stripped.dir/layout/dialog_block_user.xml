<?xml version="1.0" encoding="utf-8"?>
<com.forthgreen.app.views.utils.SlidingConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimaryBackground">

    <TextView
        android:id="@+id/tvBlockUser"
        android:fontFamily="@font/roboto"
        android:layout_width="0dp"
        android:textColor="@color/colorAccent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:paddingStart="24dp"
        android:paddingTop="22dp"
        android:textFontWeight="700"
        android:paddingBottom="18dp"
        android:text="@string/block_user"
        android:visibility="visible"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvReportAbuse"
        android:fontFamily="@font/roboto"
        android:textColor="@color/colorAccent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:paddingStart="24dp"
        android:textFontWeight="400"
        android:paddingEnd="24dp"
        android:paddingBottom="18dp"
        android:text="@string/block_user_dialog_desc"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvBlockUser" />

    <TextView
        android:id="@+id/tvCancel"
        android:fontFamily="@font/roboto"
        android:layout_width="wrap_content"
        android:textFontWeight="500"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:lineSpacingExtra="0sp"
        android:paddingStart="24dp"
        android:paddingTop="18dp"
        android:paddingBottom="18dp"
        android:text="@string/cancel_block_user_menu"
        android:textColor="@color/colorTaggedUser"
        android:textSize="14sp"
        app:layout_constraintEnd_toStartOf="@+id/tvBlock"
        app:layout_constraintTop_toBottomOf="@id/tvReportAbuse" />

    <TextView
        android:id="@+id/tvBlock"
        android:fontFamily="@font/roboto"
        android:textFontWeight="500"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:lineSpacingExtra="0sp"
        android:paddingStart="24dp"
        android:paddingTop="18dp"
        android:paddingEnd="24dp"
        android:paddingBottom="18dp"
        android:text="@string/block_block_user_menu"
        android:textColor="#FF6B6C"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvReportAbuse" />

</com.forthgreen.app.views.utils.SlidingConstraintLayout>
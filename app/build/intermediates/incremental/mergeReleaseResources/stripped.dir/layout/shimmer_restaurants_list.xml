<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/viewRestaurantPic"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/colorShimmerGrey"
        app:layout_constraintDimensionRatio="2.09"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/viewRestaurantName"
        style="@style/StyleSemiBold"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:background="@color/colorShimmerGrey"
        app:layout_constraintDimensionRatio="10.9"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/viewRestaurantPic"
        app:layout_constraintWidth_percent="0.58" />

    <View
        android:id="@+id/viewRatingCount"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:background="@color/colorShimmerGrey"
        app:layout_constraintDimensionRatio="10.9"
        app:layout_constraintStart_toStartOf="@id/viewRestaurantName"
        app:layout_constraintTop_toBottomOf="@id/viewRestaurantName"
        app:layout_constraintWidth_percent="0.58" />

    <View
        android:id="@+id/viewCuisine"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:background="@color/colorShimmerGrey"
        app:layout_constraintDimensionRatio="5.1"
        app:layout_constraintStart_toStartOf="@+id/viewRestaurantName"
        app:layout_constraintTop_toBottomOf="@+id/viewRatingCount"
        app:layout_constraintWidth_percent="0.27" />

    <TextView
        android:id="@+id/tvPriceRange"
        style="@style/StyleSemiBold"
        android:layout_width="wrap_content"
        android:text="$$$"
        android:textColor="@color/colorShimmerGrey"
        android:textSize="16sp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/viewDistance"
        app:layout_constraintStart_toStartOf="@+id/viewRestaurantName"
        app:layout_constraintTop_toTopOf="@id/viewDistance" />

    <View
        android:id="@+id/viewDistance"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp"
        android:background="@color/colorShimmerGrey"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="5.1"
        app:layout_constraintStart_toStartOf="@id/viewCuisine"
        app:layout_constraintTop_toBottomOf="@+id/viewCuisine"
        app:layout_constraintWidth_percent="0.27" />

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="@dimen/create_post_end_margin">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/sivPostImage"
        android:layout_width="180dp"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearanceOverlay="@style/ShapeableRoundedPostImageView"
        app:srcCompat="@drawable/ic_placeholder_broken_img" />

    <ImageView
        android:id="@+id/ivCross"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:src="@drawable/ic_post_image_clear"
        app:layout_constraintEnd_toEndOf="@id/sivPostImage"
        app:layout_constraintTop_toTopOf="@id/sivPostImage" />

</androidx.constraintlayout.widget.ConstraintLayout>
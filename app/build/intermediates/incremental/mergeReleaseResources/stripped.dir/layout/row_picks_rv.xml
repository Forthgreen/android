<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/ivQuickProductImage"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_launcher_background"
        app:layout_constraintDimensionRatio="1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/tvQuickBrandName"
        style="@style/StyleSemiBold"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:ellipsize="end"
        android:layout_marginStart="16dp"
        android:maxLines="1"
        android:text="Matt&amp;Natt"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@id/ivQuickProductImage"
        app:layout_constraintTop_toTopOf="@id/ivQuickProductImage" />

    <TextView
        android:id="@+id/tvQuickProductName"
        style="@style/StyleRegular"
        android:layout_width="55dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:ellipsize="end"
        android:text="Trainers AMEs"
        android:layout_marginStart="16dp"
        android:maxLines="1"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@id/ivQuickProductImage"
        app:layout_constraintTop_toBottomOf="@id/tvQuickBrandName" />

    <TextView
        android:id="@+id/tvQuickProductName1"
        style="@style/StyleRegular"
        android:layout_width="55dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:ellipsize="end"
        android:text="$109"
        android:layout_marginStart="16dp"
        android:maxLines="1"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@id/ivQuickProductImage"
        app:layout_constraintTop_toBottomOf="@id/tvQuickProductName" />

    <ImageView
        android:id="@+id/ivBookmark"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_bookmark"
        app:layout_constraintDimensionRatio="1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>